<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/message_list_message_head_photo"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_gravity="center"
      android:layout_marginLeft="8dp"
      android:src="@drawable/mine_head_my_photo" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginLeft="15dp"
      android:weightSum="3"
      android:orientation="vertical">

      <TextView
        android:id="@+id/message_list_message_user_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="99999999"
        android:textSize="16dp" />

      <TextView
        android:id="@+id/message_list_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:text="点赞了你的作品"
        android:textSize="15dp" />
      <TextView
        android:id="@+id/message_list_message_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="00000"
        android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="right"
      android:layout_marginRight="8dp"
      android:gravity="right">
      <ImageView
        android:id="@+id/message_list_liked_content"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:src="@drawable/mine_head_my_photo">
      </ImageView>
    </LinearLayout>

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>