<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/content_item_head_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mine_head_my_photo"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/content_item_nickname"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="11111"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/content_item_time"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/content_item_nickname"
                android:text="2222"
                android:textSize="15dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_item_content_container"
        app:layout_constraintTop_toBottomOf="@+id/content_item_head_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/content_item_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="4444444"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_item_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/content_item_content_container">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/content_bottom_transpond"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_content_item_transpond">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="333"
                android:textSize="10sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/content_bottom_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_content_item_comment"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="333"
                android:textSize="10sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginRight="40dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/content_bottom_likes"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_content_item_likes">
            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="333"
                android:textSize="10sp"></TextView>
        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>