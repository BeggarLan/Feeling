<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.li.feeling.login.LoginActivity">

  <EditText
    android:id="@+id/login_page_phone_view"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="100dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:hint="请输入手机号"
    android:background="@color/color_base_black_4">
  </EditText>

  <EditText
    android:id="@+id/login_page_password_view"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    app:layout_constraintTop_toBottomOf="@+id/login_page_phone_view"
    android:layout_marginTop="50dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:hint="请输入密码"
    android:background="@color/color_base_black_4">
  </EditText>

  <Button
    android:id="@+id/login_page_login_button"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    app:layout_constraintTop_toBottomOf="@+id/login_page_password_view"
    android:layout_marginTop="100dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:background="@color/color_base_red_live_3"
    android:text="登陆"
    android:textSize="26sp"
    android:textColor="@color/color_base_white">
  </Button>

  <TextView
    android:id="@+id/login_page_register_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="@id/login_page_login_button"
    app:layout_constraintTop_toBottomOf="@+id/login_page_login_button"
    android:layout_marginTop="50dp"
    android:text="注册"
    android:textColor="@color/color_base_violet_5"
    android:textSize="20sp">
  </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>